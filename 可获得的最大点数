class Solution {
public:
    int maxScore(vector<int>& card, int k) {
        int n=0,m=card.size()-k;
        for(auto e:card)
        {
            n+=e;
        }
        int s=0;
        for(int i=0;i<m;i++)
        {
            s+=card[i];
        }
        int min_s=s;
        for(int i=m;i<card.size();i++)
        {
            s=s-card[i-m]+card[i];
            min_s=min(min_s,s);
        }
        return n-min_s;
    }
};