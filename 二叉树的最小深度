class Solution {
    int min_i=1000000;
public:
    void dfs(TreeNode* root,int n)
    {
        if(root==nullptr)
        {
            return ;
        }
        if(root->left==nullptr&&root->right==nullptr)
        {
            min_i=min(min_i,n);
        }
        dfs(root->left,n+1);
        dfs(root->right,n+1);
    }
    int minDepth(TreeNode* root) {
        if(root==nullptr)return 0;
        dfs(root,0);
        return min_i+1;
    }
};