class Solution {
public:
    int numberOfMatches(int n) {
        int ret=0;
        int flag=0;
        while(n>1)
        {
            if(n%2)
            {
                flag=1;
            }
            else
            {
                flag=0;
            }
            ret+=n/2;
            n=n/2+flag;
        }
        return ret;
    }
};