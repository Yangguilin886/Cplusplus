class Solution {
public:
    vector<int> numberGame(vector<int>& nums) {
        vector<int> ret;
        int n=0,m=0;
        sort(nums.begin(),nums.end(),greater<int>());
        for(int i=nums.size()-1;i>=0;i-=2)
        {
            n=nums[i];
            m=nums[i-1];
            ret.push_back(m);
            ret.push_back(n);
        }
        return ret;
    }
};