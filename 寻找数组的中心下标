class Solution {
public:
    int pivotIndex(vector<int>& nums) {
        int n=nums.size();
        vector<int> dp(n+1);
        for(int i=0;i<nums.size();i++)
        {
            dp[i+1]=dp[i]+nums[i];
        }
        for(int i=1;i<n+1;i++)
        {
            if(dp[n]-dp[i-1]==dp[i])
            {
                return i-1;
            }
        }
        return -1;
    }
};