class Solution {
public:
    int numberOfChild(int n, int k) {
        int m=0,i=0,flag=1;
        while(1)
        {
            i+=flag;
            m++;
            if(m==k)
            {
                break;
            }
            if(i==n-1)
            {
                flag=-1;
            }
            if(i==0)
            {
                flag=1;
            }
        }
        return i;
    }
};