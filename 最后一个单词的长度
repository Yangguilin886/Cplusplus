class Solution {
public:
    int lengthOfLastWord(string s) {
        int flag=0;
        string::reverse_iterator it=s.rbegin();
        while(it!=s.rend())
        {
            if(flag!=0&&*it==' ')
            {
                return flag;
            }
            if(*it!=' ')
            {
                ++flag;
            }
            ++it;
        }
        return flag;
    }
};