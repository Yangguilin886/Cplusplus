/*
// Definition for a Node.
class Node {
public:
    int val;
    Node* next;
    Node* random;
    
    Node(int _val) {
        val = _val;
        next = NULL;
        random = NULL;
    }
};
*/

class Solution {
public:
    Node* copyRandomList(Node* head) {
        Node* newhead=nullptr;
        Node* newtail=nullptr;
        Node* cur=head;
        map<Node*,Node*> ret;
        while(cur)
        {
            if(newhead==nullptr)
            {
                newhead=newtail=new Node(cur->val);
            }
            else
            {
                newtail->next=new Node(cur->val);
                newtail=newtail->next;
            }
            ret[cur]=newtail;
            cur=cur->next;
        }
        cur=head;
        while(cur)
        {
            ret[cur]->random=ret[cur->random];
            cur=cur->next;
        }
        return newhead;
    }
};