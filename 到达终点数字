class Solution {
public:
    int reachNumber(int target) {
        target=abs(target);
        int sum=0;
        int i=1;
        while(i)
        {
            sum+=i;
            if(sum==target)
            {
                return i;
            }
            if(sum>target&&(sum-target)%2==0)
            {
                return i;
            }
            i++;
        }
        return 0;
    }
};