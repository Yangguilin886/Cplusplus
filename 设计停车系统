class ParkingSystem {
public:
    ParkingSystem(int big, int medium, int small) 
    :_big(big)
    ,_medium(medium)
    ,_small(small)
    {}

    bool addCar(int nums) {
        if(nums==1)
        {
            if(_bigcur<_big)
            {
                _bigcur++;
                return true;
            }
            else
            {
                return false;
            }
        }
        else if(nums==2)
        {
            if(_mediumcur<_medium)
            {
                _mediumcur++;
                return true;
            }
            else
            {
                return false;
            }
        }
        else
        {
            if(_smallcur<_small)
            {
                _smallcur++;
                return true;
            }
            else 
            {
                return false;
            }
        }
        return false;
    }
private:
    int _big;
    int _bigcur=0;
    int _medium;
    int _mediumcur=0;
    int _small;
    int _smallcur=0;
};