#include <iostream>
#include<vector>
using namespace std;

int main() {
   int n,m;
   cin>>n>>m;
   vector<int> ret(n+1);
   for(int i=1;i<n+1;i++)
   {
    cin>>ret[i];
   }
   vector<long long> dp(n+1,0);
   for(int i=1;i<n+1;i++)
   {
    dp[i]=dp[i-1]+ret[i];
   }
   int l,r;
   while(m--)
   {
    cin>>l>>r;
    cout<<dp[r]-dp[l-1]<<endl;
   }
}