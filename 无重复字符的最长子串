class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int ret[128]={0};
        int len=0;
        int left=0,right=0;
        for(left=0,right=0;right<s.size();right++)
        {
            while(ret[s[right]]!=0)
            {
                len=max(len,right-left);
                ret[s[left]]--;
                left++;
            }
            ret[s[right]]++;
        }
        len=max(right-left,len);
        return len;
    }
};