#include<iostream>
using namespace std;
int main()
{
    int t=0;
    cin>>t;
    while(t--)
    {
        int n=0,k=0;
        cin>>n>>k;
        int m=(n-k%n)%n;
        if(m%2==0)
        {
            cout<<m/2<<endl;
        }
        else if((m+n)%2==0)
        {
            cout<<(m+n)/2<<endl;
        }
        else
        {
            cout<<-1<<endl;
        }
    }
    return 0;
}