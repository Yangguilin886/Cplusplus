class Solution {
public:
    int maximumEnergy(vector<int>& nums, int k) {
        int ret=INT_MIN;   
        for(int i=nums.size()-k;i<nums.size();i++)
        {
            int sum=0;
            for(int j=i;j>=0;j-=k)
            {
                sum+=nums[j];
                ret=max(ret,sum);
            }
        }
        return ret;
    }
};