class Solution {
public:
    int chalkReplacer(vector<int>& chalk, int k) {
        long long m=0;
        for(int i=0;i<chalk.size();i++)
        {
            m+=chalk[i];
        }
        k%=m;
        for(int i=0;i<chalk.size();i++)
        {
            if(k<chalk[i])
            {
                return i;
            }
            k-=chalk[i];
        }
        return -1;
    }
};