class Solution {
public:
    int hIndex(vector<int>& citations) {
        int left=0,n=citations.size(),right=n-1;
        while(left<right)
        {
            int mid=left+(right-left)/2;
            if(citations[mid]<n-mid)
            {
                left=mid+1;
            }
            else
            {
                right=mid;
            }
        }
        if(citations[left]<n-left)
        {
            return 0;
        }
        return n-left;
    }
};