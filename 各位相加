class Solution {
public:
    int addDigits(int num) {
        int n=0;
        while(num>0)
        {
            n+=num%10;
            num/=10;
        }
        while(n>=10)
        {
            int m=0;
            while(n>0)
            {
                m+=n%10;
                n/=10;
            }
            n=m;
        }
        return n;
    }
};