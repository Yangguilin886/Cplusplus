#include <iostream>
#include <string>
#include<map>
#include<vector>
#include<algorithm>
using namespace std;
bool cmp(pair<string,int> p1,pair<string,int> p2)
{
    return p1.second>p2.second;
}
int main() {
    string ret;
    getline(cin,ret);
    map<string,int> mp;
    for(int i=0,j=0;i<ret.size();i++)
    {
        if(ret[i]==' '||ret[i]=='.')
        {
            string t=ret.substr(j,i-j);
            if(isupper(t[0]))
            {
                t[0]=tolower(t[0]);
            }
            mp[t]++;
            j=i+1;
        }
    }
    vector<pair<string,int>> tmp(mp.begin(),mp.end());
    sort(tmp.begin(),tmp.end(),cmp);
    for(int i=0;i<tmp.size();i++)
    {
        cout<<tmp[i].first<<':'<<tmp[i].second<<endl;
    }
}